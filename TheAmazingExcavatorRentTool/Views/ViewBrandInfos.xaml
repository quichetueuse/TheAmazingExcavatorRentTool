<Window x:Class="TheAmazingExcavatorRentTool.Views.ViewBrandInfos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TheAmazingExcavatorRentTool.Views"
        mc:Ignorable="d"
        Title="Informations sur la marque sélectionnée" 
        Height="720" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Icon="../Assets/app-icon.png"
        AllowsTransparency="True">
    
            
    
    
    <Border Background="#272537" CornerRadius="20">
        <Grid ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
                        <Border Background="#22202F" Grid.ColumnSpan="3" CornerRadius="20 20 0 0 "/>
                        
                        <!-- Only used to drag window --> 
                        <StackPanel Grid.ColumnSpan="3" Background="Transparent" MouseLeftButtonDown="DragWindow"/>
                                
                        
                        <StackPanel Orientation="Horizontal">
                        
                                <!-- Title bar title-->
                                <TextBlock Text="Informations concernant la marque sélectionnée"
                                           Margin="10, 0, 0, 0"
                                           VerticalAlignment="Center"
                                           Foreground="White"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                        </StackPanel>
                        
                        <Button Grid.Column="2"
                                Name="MinimizeButton"
                                Style="{StaticResource ResizeButtonTheme}"
                                Background="Transparent"
                                Margin="0 0 60 0"
                                Height="30"
                                Width="30"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Click="MinimizeWindow"
                                Foreground="White"
                                Content="—">
                        </Button>
                        
                        
                        <Button Grid.Column="2"
                                Style="{StaticResource ResizeButtonTheme}"
                                Name="MaximizeButton"
                                Background="Transparent"
                                Margin="0 0 30 0"
                                Height="30"
                                Width="30"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Click="MaximizeWindow"
                                Foreground="White"
                                Content="■">
                        </Button>
                        
                        <Button Grid.Column="2"
                                Style="{StaticResource CloseButtonStyle}"
                                Name="CloseButton"
                                Margin="0"
                                Height="30"
                                Width="30"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Click="CloseWindow">
                                <Image Source="../Assets/cross_icon.png"></Image>
                        </Button>
            
            
                        <!-- View form -->
                        
                        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0 100 0 0" Background="#22202F" Height="350" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <StackPanel Style="{StaticResource StackPanelMarginStyling}">
                                <Label Content="Nom: " Foreground="White" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                                <TextBox Name="TbName" Padding="20 0 0 0" FontSize="20" Width="300" Style="{StaticResource  MainTextBoxTheme}"/>
                            </StackPanel>
                            
                            <StackPanel Style="{StaticResource StackPanelMarginStyling}">
                                <Label Content="Année de création: " Foreground="White" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                                <TextBox Name="TbCreationYear" Padding="20 0 0 0" FontSize="20" Width="300" Style="{StaticResource  MainTextBoxTheme}"/>
                            </StackPanel>
                        </StackPanel>
        </Grid>
    </Border>
</Window>
