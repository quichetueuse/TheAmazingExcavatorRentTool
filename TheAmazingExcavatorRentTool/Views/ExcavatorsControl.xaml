<UserControl x:Class="TheAmazingExcavatorRentTool.Views.ExcavatorsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TheAmazingExcavatorRentTool.Views"
             xmlns:views="clr-namespace:TheAmazingExcavatorRentTool.Views"
             xmlns:viewModels="clr-namespace:TheAmazingExcavatorRentTool.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="ExcavatorsControl_OnLoaded">
    <UserControl.Resources></UserControl.Resources>
    <!-- <UserControl.DataContext> -->
    <!--     <viewModels:ExcavatorVM/> -->
    <!-- </UserControl.DataContext> -->
    
    <Grid ShowGridLines="False" Background="Cornsilk">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
    
        <DataGrid 
            Name="ExcavatorGrid" 
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            Grid.RowSpan="3"
            ItemsSource="{Binding AllExcavatorsView}" 
            AutoGenerateColumns="False" 
            CanUserSortColumns="False" 
            AlternatingRowBackground="LightBlue" 
            CanUserReorderColumns="False" 
            SelectionMode="Single" 
            IsReadOnly="True" 
            CanUserResizeColumns="False" 
            SelectionChanged="on_SelectionChanged" 
            GridLinesVisibility="None"
            EnableColumnVirtualization="False"
            >
            <DataGrid.RowHeaderStyle>
                <Style TargetType="{x:Type DataGridRowHeader}">
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Content" Value="{Binding Path=AlternationIndex, RelativeSource={RelativeSource AncestorType=DataGridRow}}" />
                </Style>
            </DataGrid.RowHeaderStyle>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CellStyle="{StaticResource CenteredGridContent}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CellStyle="{StaticResource CenteredGridContent}"/>
                <DataGridTextColumn Header="Marque" Binding="{Binding Brand.Name}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CellStyle="{StaticResource CenteredGridContent}"/>
                <DataGridTextColumn Header="Capacité du godet" Binding="{Binding BucketLiters}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CellStyle="{StaticResource CenteredGridContent}"/>
                <DataGridTextColumn Header="Année de sortie" Binding="{Binding ReleaseYear}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CellStyle="{StaticResource CenteredGridContent}"/> 
                <DataGridCheckBoxColumn Header="Est utilisé"  HeaderStyle="{StaticResource CenterGridHeaderStyle}" Binding="{Binding IsUsed}" CellStyle="{StaticResource CenteredGridContent}"/>
                <DataGridTextColumn Header="Prix journalier" Binding="{Binding DailyPrice}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CellStyle="{StaticResource CenteredGridContent}"/> 
                <DataGridTemplateColumn Header="Image de la pelleteuse" HeaderStyle="{StaticResource CenterGridHeaderStyle}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Width="50" Height="50" Source="{Binding PicturePath}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn> 
            </DataGrid.Columns>
        </DataGrid>
        
        <GroupBox Grid.Column="2" Header="Modification" BorderThickness="3" BorderBrush="Black" Grid.RowSpan="2" Visibility="Hidden" Name="EditForm">
                <StackPanel Grid.RowSpan="2">
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource FirstStackPanelMarginStyling}">
                        <Label Content="Nom:"></Label>
                        <TextBox MaxLength="32" HorizontalAlignment="Left" Name="txtEditName" VerticalAlignment="Top"  Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding ElementName=ExcavatorGrid, Path=SelectedItem.Name, Mode=OneWay}" TextChanged="ValidateTextFields"/>
                        <Image Source="../Assets/checkmark-icon2.png" Width="24" Height="24" Margin="8 0 0 0" Name="EditValidNameImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Description:"></Label>
                        <TextBox MaxLength="128" HorizontalAlignment="Left" Name="txtEditDesc" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding ElementName=ExcavatorGrid, Path=SelectedItem.Description, Mode=OneWay}" TextChanged="ValidateTextFields"/>
                    <Image Source="../Assets/checkmark-icon2.png" Width="24" Height="24" Margin="8 0 0 0" Name="EditValidDescImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}"> <!--VerticalAlignment="Top"-->
                        <Label Content="Marque:"></Label>
                        <ComboBox Name="cbEditBrand" ItemsSource="{Binding BrandVm.Brands}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" VerticalContentAlignment="Center" SelectedItem="{Binding Path=SelectedItem.Brand, ElementName=ExcavatorGrid, Mode=OneWay}" SelectionChanged="ValidateComboboxFields">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock 
                                            Margin="5 0"
                                            VerticalAlignment="Center">
                                            <Run  Text="Nom entier :" />
                                            <Run Text="{Binding Name, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock 
                                            Margin="5 0"
                                            Text="|"
                                       
                                            VerticalAlignment="Center" />
                                        <TextBlock
                                            Margin="5 0"
                                            VerticalAlignment="Center">
                                            <Run  Text="Crée en :" />
                                            <Run Text="{Binding CreationYear, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="EditValidBrandImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Capacité du godet:"></Label>
                        <TextBox HorizontalAlignment="Left" Name="txtEditBucketLiters" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding SelectedItem.BucketLiters, ElementName=ExcavatorGrid, Mode=OneWay}" TextChanged="ValidateTextFields"/>
                        <Image Source="../Assets/checkmark-icon2.png" Width="24" Height="24" Margin="8 0 0 0" Name="EditValidBucketLitersImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Année de sortie:"></Label>
                        <TextBox HorizontalAlignment="Left" Name="txtEditReleaseYear" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding SelectedItem.ReleaseYear, ElementName=ExcavatorGrid, Mode=OneWay}" TextChanged="ValidateTextFields"/>
                        <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="EditValidReleaseYearImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Prix journalier:"></Label>
                        <TextBox HorizontalAlignment="Left" Name="txtEditDailyPrice" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding SelectedItem.DailyPrice, ElementName=ExcavatorGrid, Mode=OneWay}" TextChanged="ValidateTextFields"/>
                        <Image Source="../Assets/checkmark-icon2.png" Width="24" Height="24" Margin="8 0 0 0" Name="EditValidDailyPriceImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Image de la pelleteuse:"></Label>
                        <TextBox HorizontalAlignment="Left" Name="txtEditImagePath" VerticalAlignment="Top" Style="{StaticResource TextBoxFileStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding ElementName=ExcavatorGrid, Path=SelectedItem.PicturePath, Mode=OneWay}" IsReadOnly="True"/>
                        <Button x:Name="btnUpdateBrowseImage" Content="Choisir" Height="25" Width="75" Click="BtnUpdateBrowseImage_OnClick"></Button>
                    </StackPanel>
                    <Image Width="250" Height="200" Margin="0 0 0 0" Name="EditImagePreview" Source="{Binding SelectedItem.PicturePath, Mode=OneWay, ElementName=ExcavatorGrid}"></Image>
                    
                    <WrapPanel Margin="0 10 0 0" HorizontalAlignment="Center">
                    <Button Name="editBtn" Content="Enregistrer" Margin="10 0" MinHeight="50" MinWidth="100" Click="ApplyChanges" Style="{StaticResource BtnBorderRadius}"></Button>
                    <Button Name="clearEditBtn" Content="Effacer" Margin="10 0" MinHeight="50" MinWidth="100" Click="ClearEditForm" Style="{StaticResource BtnBorderRadius}"></Button>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
        
        <GroupBox Grid.Column="2" Header="Ajout" BorderThickness="3" BorderBrush="Black" Grid.RowSpan="2" Visibility="Hidden" Name="AddForm">
                <StackPanel Grid.RowSpan="2">
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource FirstStackPanelMarginStyling}">
                        <Label Content="Nom:"></Label>
                        <TextBox MaxLength="32" HorizontalAlignment="Left" Name="txtAddName" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="ValidateTextFields"/>
                        <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="AddValidNameImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Description:"></Label>
                        <TextBox MaxLength="128" HorizontalAlignment="Left" Name="txtAddDesc" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="ValidateTextFields"/>
                    <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="AddValidDescImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Marque:"></Label>
                        <ComboBox Name="cbAddBrand" ItemsSource="{Binding BrandVm.Brands}" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="300" Height="25" VerticalContentAlignment="Center" SelectedItem="{Binding Path=Brand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectionChanged="ValidateComboboxFields">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock 
                                            Margin="5 0"
                                            VerticalAlignment="Center">
                                            <Run  Text="Nom entier :" />
                                            <Run Text="{Binding Name, Mode=OneWay}"/>
                                        </TextBlock>
                                        <TextBlock 
                                            Margin="5 0"
                                            Text="|"
                                       
                                            VerticalAlignment="Center" />
                                        <TextBlock
                                            Margin="5 0"
                                            VerticalAlignment="Center">
                                            <Run  Text="Crée en :" />
                                            <Run Text="{Binding CreationYear, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="AddValidBrandImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Capacité du godet:"></Label>
                        <TextBox HorizontalAlignment="Left" Name="txtAddBucketLiters" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding BucketLiters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="ValidateTextFields"/>
                        <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="AddValidBucketLitersImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Année de sortie:"></Label>
                        <TextBox HorizontalAlignment="Left" Name="txtAddReleaseYear" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding ReleaseYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="ValidateTextFields"/>
                        <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="AddValidReleaseYearImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Prix journalier:"></Label>
                        <TextBox HorizontalAlignment="Left" Name="txtAddDailyPrice" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding DailyPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="ValidateTextFields"/>
                        <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="AddValidDailyPriceImg"></Image>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                        <Label Content="Image de la pelleteuse:"></Label>
                        <TextBox HorizontalAlignment="Left" Name="txtAddImagePath" VerticalAlignment="Top" Style="{StaticResource TextBoxFileStyling}" Height="25" VerticalContentAlignment="Center" IsReadOnly="True" Text="Aucun fichier séclectionné"/>
                        <Button x:Name="btnAddBrowseImage" Content="Choisir" Height="25" Width="75" Click="BtnAddBrowseImage_OnClick"></Button>
                    </StackPanel>
                    <Image Width="250" Height="200" Margin="0 0 0 0" Name="AddImagePreview"></Image>
                    
                    <WrapPanel Margin="0 10 0 0" HorizontalAlignment="Center">
                    <Button Name="addBtn" Content="Ajouter" Margin="10 0" MinHeight="50" MinWidth="100" Command="{Binding Path=AddCommand}" IsEnabled="False" Style="{StaticResource BtnBorderRadius}"></Button>
                    <Button Name="clearAddButton" Content="Effacer" Margin="10 0" MinHeight="50" MinWidth="100" Click="ClearAddForm" Style="{StaticResource BtnBorderRadius}"></Button>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
    
        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="ManageAddFormBtn" Width="150" Height="50" Margin="5" Click="ManageAddForm" Style="{StaticResource BtnBorderRadius}">
                <Image Source="../Assets/add-icon.png" Width="24" Height="24" Name="manageAddBtnImage"></Image>
            </Button>
            <Button Name="ManageEditFormBtn" Width="150" Height="50" Margin="5" IsEnabled="False" Click="ManageEditForm" Style="{StaticResource BtnBorderRadius}">
                <Image Source="../Assets/edit-icon.png" Width="24" Height="24" Name="manageEditBtnImage"></Image>
            </Button>
            <Button Name="DeleteBtn" Width="150" Height="50" Margin="5" IsEnabled="False" Command="{Binding DeleteCommand}" CommandParameter="{Binding ElementName=ExcavatorGrid, Path=SelectedItem}" Style="{StaticResource BtnBorderRadius}">
                <Image Source="../Assets/redtrashcan-icon.png" Width="24" Height="24" Name="deleteBtnImage"></Image>
            </Button>
        </StackPanel>
            
            
            
            
    </Grid>
</UserControl>
