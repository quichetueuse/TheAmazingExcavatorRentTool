<UserControl x:Class="TheAmazingExcavatorRentTool.Views.BrandsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TheAmazingExcavatorRentTool.Views"
             xmlns:viewModels="clr-namespace:TheAmazingExcavatorRentTool.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" Loaded="BrandsControl_OnLoaded">
    <!-- <UserControl.DataContext> -->
    <!--     <viewModels:BrandVM/> -->
    <!-- </UserControl.DataContext> -->
    
    <Grid ShowGridLines="False" Background="Cornsilk">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <DataGrid 
            Name="BrandGrid" 
            Grid.Row="0" 
            Grid.Column="0" 
            Grid.ColumnSpan="2"
            Grid.RowSpan="3"
            ItemsSource="{Binding Brands}" 
            AutoGenerateColumns="False" 
            CanUserSortColumns="False" 
            AlternatingRowBackground="LightBlue" 
            CanUserReorderColumns="False" 
            SelectionMode="Single" 
            IsReadOnly="True" 
            CanUserResizeColumns="False" 
            SelectionChanged="on_SelectionChanged" 
            GridLinesVisibility="None"
            Style="{StaticResource HeightSetter}">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CellStyle="{StaticResource CenteredGridContent}"/>
                <DataGridTextColumn Header="Date de création" Binding="{Binding CreationYear}" HeaderStyle="{StaticResource CenterGridHeaderStyle}" CellStyle="{StaticResource CenteredGridContent}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <GroupBox Grid.Column="2" Header="Modification" BorderThickness="3" BorderBrush="Black" Grid.RowSpan="2" Visibility="Hidden" Name="EditForm">
            <StackPanel Grid.RowSpan="2">
                
                <StackPanel Orientation="Horizontal" Style="{StaticResource FirstStackPanelMarginStyling}">
                    <Label Content="Nom:"></Label>
                    <TextBox MaxLength="32" HorizontalAlignment="Left" Name="txtEditName" VerticalAlignment="Top"  Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding ElementName=BrandGrid, Path=SelectedItem.Name, Mode=OneWay}" TextChanged="ValidateTextFields"/>
                    <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="EditValidNameImg"></Image>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                    <Label Content="Date de création:"></Label>
                    <TextBox MaxLength="4" HorizontalAlignment="Left" Name="txtEditCreationYear" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding ElementName=BrandGrid, Path=SelectedItem.CreationYear, Mode=OneWay}" TextChanged="ValidateTextFields"/>
                <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="EditValidCreationYearImg"></Image>
                </StackPanel>
                
                <WrapPanel Margin="0 10 0 0" HorizontalAlignment="Center">
                    <Button Name="editBtn" Content="Enregistrer" Margin="10 0" MinHeight="50" MinWidth="100" Click="ApplyChanges" Style="{StaticResource BtnBorderRadius}"/>
                    <Button Name="clearEditBtn" Content="Effacer" Margin="10 0" MinHeight="50" MinWidth="100" Click="ClearEditForm" Style="{StaticResource BtnBorderRadius}"/>
                </WrapPanel>
            </StackPanel>
        </GroupBox>
        
        <GroupBox Grid.Column="2" Header="Ajout" BorderThickness="3" BorderBrush="Black" Grid.RowSpan="2" Visibility="Hidden" Name="AddForm">
            <StackPanel Grid.RowSpan="2">
                
                <StackPanel Orientation="Horizontal" Style="{StaticResource FirstStackPanelMarginStyling}">
                    <Label Content="Nom:"></Label>
                    <TextBox MaxLength="32" HorizontalAlignment="Left" Name="txtAddName" VerticalAlignment="Top"  Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="ValidateTextFields"/>
                    <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="AddValidNameImg"></Image>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Style="{StaticResource StackPanelMarginStyling}">
                    <Label Content="Date de création:"></Label>
                    <TextBox MaxLength="4" HorizontalAlignment="Left" Name="txtAddCreationYear" VerticalAlignment="Top" Style="{StaticResource TextBoxStyling}" Height="25" VerticalContentAlignment="Center" Text="{Binding Path=CreationYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="ValidateTextFields"/>
                <Image Source="../Assets/redcross-icon.png" Width="24" Height="24" Margin="8 0 0 0" Name="AddValidCreationYearImg"></Image>
                </StackPanel>
                
                <WrapPanel Margin="0 10 0 0" HorizontalAlignment="Center">
                    <Button Name="addBtn" Content="Ajouter" Margin="10 0" MinHeight="50" MinWidth="100" Command="{Binding Path=AddCommand}" IsEnabled="False" Style="{StaticResource BtnBorderRadius}"/>
                    <Button Name="clearAddButton" Content="Effacer" Margin="10 0" MinHeight="50" MinWidth="100" Click="ClearAddForm" Style="{StaticResource BtnBorderRadius}"/>
                </WrapPanel>
            </StackPanel>
        </GroupBox>
        
        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="ManageAddFormBtn" Width="150" Height="50" Margin="5" Click="ManageAddForm" Style="{StaticResource BtnBorderRadius}">
                <Image Source="../Assets/add-icon.png" Width="24" Height="24" Name="manageAddBtnImage"></Image>
            </Button>
            <Button Name="ManageEditFormBtn" Width="150" Height="50" Margin="5" IsEnabled="False" Click="ManageEditForm" Style="{StaticResource BtnBorderRadius}">
                <Image Source="../Assets/edit-icon.png" Width="24" Height="24" Name="manageEditBtnImage"></Image>
            </Button>
            <Button Name="DeleteBtn" Width="150" Height="50" Margin="5" IsEnabled="False" Command="{Binding DeleteCommand}" CommandParameter="{Binding ElementName=BrandGrid, Path=SelectedItem}" Style="{StaticResource BtnBorderRadius}">
                <Image Source="../Assets/redtrashcan-icon.png" Width="24" Height="24" Name="deleteBtnImage"></Image>
            </Button>
        </StackPanel>
        
    </Grid>
</UserControl>
