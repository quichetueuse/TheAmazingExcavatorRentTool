<Window x:Class="TheAmazingExcavatorRentTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheAmazingExcavatorRentTool"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="The Greatest Excavator Renting App That was ever created" Height="1080" Width="1920">
    
    <TabControl TabStripPlacement="Top" Grid.Column="0" Grid.ColumnSpan="10000" Grid.Row="0" Name="modules_tabcontrol">
        <TabItem Header="Excavators" Height="30px" Width="75px" Name="ItemExcavator"></TabItem>
        <TabItem Header="DVDs" Height="30px" Width="75px" Name="ItemDvds"></TabItem>
        <TabItem Header="Locations" Height="30px" Width="75px" Name="ItemLocations" ></TabItem>
        <TabItem Header="Retours" Height="30px" Width="75px" Name="ItemRetours"></TabItem>
        <TabItem Height="30px" Width="75px" Name="ItemDisconnect">
            <TabItem.Template>
                <ControlTemplate>
                    <Button Click="UIElement_OnGotFocus" Content="Déconnexion" Background="IndianRed"></Button>
                </ControlTemplate>
            </TabItem.Template>
        </TabItem>
    </TabControl>
</Window>
